{
  "multipart" : [
    {  "when": { "facing": "north" }, "apply": { "model": "utilitymeters:block/rfmeter_front_frame", "y": 90} },
    {  "when": { "facing": "south" }, "apply": { "model": "utilitymeters:block/rfmeter_front_frame","y": 270 } },
    {  "when": { "facing": "west" }, "apply": { "model": "utilitymeters:block/rfmeter_front_frame" } },
    {  "when": { "facing": "east" }, "apply": { "model": "utilitymeters:block/rfmeter_front_frame", "y": 180 } },

    {  "when": { "facing": "north", "flow_direction": "up_down" }, "apply": { "model": "utilitymeters:block/rfmeter", "y": 90 } },
    {  "when": { "facing": "north", "flow_direction": "down_up" }, "apply": { "model": "utilitymeters:block/rfmeter_inverted", "y": 90} },
    {  "when": { "facing": "south", "flow_direction": "up_down" }, "apply": { "model": "utilitymeters:block/rfmeter", "y": 270 } },
    {  "when": { "facing": "south", "flow_direction": "down_up" }, "apply": { "model": "utilitymeters:block/rfmeter_inverted", "y": 270} },
    {  "when": { "facing": "west", "flow_direction": "up_down" }, "apply": { "model": "utilitymeters:block/rfmeter" } },
    {  "when": { "facing": "west", "flow_direction": "down_up" }, "apply": { "model": "utilitymeters:block/rfmeter_inverted"} },
    {  "when": { "facing": "east", "flow_direction": "up_down" }, "apply": { "model": "utilitymeters:block/rfmeter", "y": 180} },
    {  "when": { "facing": "east", "flow_direction": "down_up" }, "apply": { "model": "utilitymeters:block/rfmeter_inverted", "y": 180} }
  ]
}